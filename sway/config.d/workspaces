# Exec and Assign workspaces software
assign [class="Gnome-terminal"] $ws1
assign [class="terminator"] $ws1
assign [class="Cursor"] $ws2
assign [class="Code"] $ws2
assign [class="jetbrains-pycharm-ce"] $ws2
